<!DOCTYPE html>
<html>
<body>
  <title>To Do</title>
  <script src="public/scripts/jquery-2.1.3.min.js"></script>

  <section id="taskforms">
    <div id="newtaskform">
      <h2>Create a New Task</h2>
      <form id="addtask" data-bind="submit: addTask">
        <input data-bind="value: newTaskDesc">
        <input type="submit">
      </form>
    </div>
    <div id="tasksearchform">
      <h2>Search Tasks</h2>
      <form id="searchtask">
        <input>
      </form>
    </div>
  </section>
  <section id="tasktable">
    <h2>Incomplete tasks remaining: </h2>
    <a>Delete all complete tasks</a>
    <table>
      <tbody>
        <tr>
          <th>Task ID</th>
          <th>Description</th>
          <th>Date Added</th>
          <th>Date Modified</th>
          <th>Complete?</th>
          <th>Delete</th>
        </tr>
        <tr>
          <td data-bind="text: id"></td>
          <td data-bind="text: description"></td>
          <td data-bind="text: created_at"></td>
          <td data-bind="text: updated_at"></td>
          <td><input type="checkbox"></td>
          <td class="destroytask"><a>X</a></td>
        </tr>
      </tbody>
    </table>
  </section>

  <script src="public/scripts/knockout.js"></script>
  <script src="public/scripts/app.js"></script>
</body>
</html>
